<%= form_for(@bark) do |f| %>                                                                                                                               
  <div class="field">
    <%= collection_select(:bark, :user_id, User.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.text_area :status, :size => "70x2" %>
  </div>
  <div class="actions">
    <%= f.submit 'Bark!' %>
  </div>
<% end %>
